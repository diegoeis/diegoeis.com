<%= partial "partials/header.html.erb" %>

<div class="de-wrapper">

  <article class="de-post">
      <header>
        <!-- <span class="de-tags">{{tags}}</span> -->
        <time datetime="<%= current_article.date.strftime('%b %e, %Y') %>"><%= current_article.date.strftime('%b %e, %Y') %></time>
        <a href="#disqus_thread" class="de-comment-count">Seja o primeiro a comentar</a>

        <h1 class="de-post-title"><%= current_article.title %></h1>
      </header>

      <%= yield %>

      <hr class="de-hr">

      <div id="disqus_thread"></div>
      <script type="text/javascript">
          /* * * CONFIGURATION VARIABLES * * */
          var disqus_shortname = 'diegoeis';

          /* * * DON'T EDIT BELOW THIS LINE * * */
          (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
      </script>

  </article>



</div>

<%= partial "partials/footer.html.erb" %>
